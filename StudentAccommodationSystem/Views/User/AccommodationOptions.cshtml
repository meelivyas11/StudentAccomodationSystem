@model StudentAccommodationSystem.Models.RoomModel

@{
    ViewBag.Title = "Available Accommodations";
    Layout = "~/Views/_LoggedInUser.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container text-center">
        <div class="row">

            @foreach (var room in ViewBag.AccommodationOptionsList)
            {
                <div class="col-sm-4">
                    <img src=@room.Image class="img-responsive" style="width:100%" alt="Image">
                    <p>@room.Title,@room.Address, @room.SasPrice$ per night</p>
                    <p><input type="submit" value="Book It" /></p>
                </div>
            }
        </div>
    </div><br>

</body>
</html>





